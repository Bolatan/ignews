{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "env": [
        "VERCEL_URL",
        "MONGODB_URI",
        "FRONTEND_URL"
      ],
      "globalEnv": [
        "VERCEL_URL",
        "MONGODB_URI",
        "FRONTEND_URL"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "start": {
      "cache": false,
      "persistent": true
    }
  }
}
