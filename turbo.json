{
  "$schema": "https://turborepo.org/schema.json",
  "globalEnv": ["MONGODB_URI", "FRONTEND_URL", "PORT"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "start": {
      "cache": false,
      "persistent": true
    }
  }
}
