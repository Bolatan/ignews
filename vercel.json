{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { 
        "distDir": "dist", 
        "rootDirectory": "frontend" 
      }
    }
  ],
  "rewrites": [
    {
   
      "source": "/api/(.*)",
      "destination": "/backend/server.js"
    },
    {
      
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
